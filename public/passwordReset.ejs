<!doctype html>
<html lang="en">

<head>
    <%- include ('partials/head.ejs') %>

    <title><%= title %></title>
    <link href="css/LoginForm.css" rel="stylesheet" type="text/css">
</head>

<body>
    <%- include ('partials/header.ejs')  %>

    <main class="login-form">
        <div class="loginMethods">
            <form id="resetPassword">
                <h2 class="text-center">Reset Password</h2><br>


                <div class="text-center" id="errorMessage"></div>

                <div class="form-group">
                    <input type="email" class="form-control" id="email" placeholder="Enter Email Id" name="email"
                        required>
                </div><br>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block login-btn">Reset My Password</button>
                </div><br>
            
            </form>
            <div class="text-center"><span class="text-muted">Don't have an account?</span> <a href="/register">Sign up here</a>
            </div>
        </div>
    </main>

    <%- include ('partials/footer.ejs' )%>
    <%- include ('partials/firebase.ejs' )%>
    <script src="js/passwordReset.js"></script>
</body>

</html>